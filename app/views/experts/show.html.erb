<h1>Especialista <%= @expert.user.full_name %></h1>
<div class="container row">
  <div class="container col-12 col-md-6">
    <%= render 'form' %>
  </div>
  <div class="container col-12 col-md-6">
    <h2>Especialidades</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Área</th>
          <th scope="col">Especialidade</th>
          <th scope="col">Registro Conselho</th>
          <th scope="col"><i class="fas fa-sliders-h"></i></th>
        </tr>
      </thead>
      <tbody>
        <%= render 'fields/index', fields: @expert.fields %>
      </tbody>
    </table>
  </div>
  <div class="container col-12">
    <h2>Participações</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Número do Processo</th>
          <th scope="col">Data Nomeação</th>
          <th scope="col">Andamento</th>
        </tr>
      </thead>
      <tbody>
        <%= render 'investigations/index', surveys: @expert.investigations %>
      </tbody>
    </table>
  </div>
</div>