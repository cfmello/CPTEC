<h2>Entre em sua conta</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label: 'E-mail',
                input_html: { autocomplete: "E-mail" } %>
    <%= f.input :password,
                required: false,
                label: 'Senha',
                input_html: { autocomplete: "Senha" } %>
    <%= f.input :remember_me, label: 'Lembrar minha conta', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Entrar", class: "btn btn-light" %>
  </div>
<% end %>

<br>

