<div class="d-flex flex-column">

  <div class="banner d-flex justify-content-center align-items-center flex-column">
      <h1 id="banner-text">Cadastro eletrônico de peritos</h1>
      <% if user_signed_in? %>
        <% if current_user.profile == "1" %>
          <%= link_to "Convocações", "#", class: "btn btn-primary mt-5", id: "banner-button" %>
        <% else %>
          <%= link_to '<i class="fas fa-search"></i> Pesquisar'.html_safe, experts_path,
          class: 'btn btn-primary mt-5'%>
        <% end %>
      <% else %>
        <%= link_to "Acessar", new_user_session_path, class: "btn btn-primary mt-5", id: "banner-button" %>
      <% end %>
  </div>

  <% if !user_signed_in? %>
    <div id="baixo" class="container">
      <div class="row">
        <div class="col-6 card">
          <p>card1</p>
        </div>
        <div class="col-6 card">
          <p>card2</p>
        </div>
      </div>
    </div>
  <% end %>
</div>