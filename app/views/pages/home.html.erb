<div class="d-flex flex-column">

  <div class="banner d-flex justify-content-around align-items-center">
      <h1 id="banner-text">Cadastro eletrônico de peritos</h1>
      <% if user_signed_in? %>
        <% if current_user.profile == "1" %>
          <%= link_to "Convocações", investigations_path, class: "btn p-2", id: "banner-button" %>
        <% else %>
          <%= link_to '<i class="fas fa-search"></i> Pesquisar'.html_safe, experts_path,
          class: 'btn p-2',
          id: "banner-button" %>
        <% end %>
      <% else %>
        <%= link_to "Acessar", new_user_session_path, class: "btn p-2", id: "banner-button" %>
      <% end %>
  </div>
</div>