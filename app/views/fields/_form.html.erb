<tr>
  <%= simple_form_for [@expert, @field], remote: true do |f| %>
    <th><%= f.input :area, label:false,
      disabled: !current_page?(edit_expert_path(@expert)) %></th>
    <td><%= f.input :title, label:false,
      disabled: !current_page?(edit_expert_path(@expert)) %></td>
    <td><%= f.input :reg_number, label:false,
      disabled: !current_page?(edit_expert_path(@expert)) %></td>
    <td>
      <%= f.button :button, class: 'btn btn-primary' do %>
        <i class="fas fa-plus"></i>
      <% end if current_page?(edit_expert_path(@expert)) %>
    </td>
  <% end %>
</tr>